<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shoppingapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingApp"
        tools:replace="android:theme">
        <activity
            android:name=".Seller.SellerLogin"
            android:exported="false" />
        <activity
            android:name=".Seller.SellerRegistration"
            android:exported="false" />
        <activity
            android:name=".Buyer.ResetPassword"
            android:exported="false" />
        <activity
            android:name=".Admin.MaintainProducts"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Admin.AdminProductsDisplay"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.SearchProduct"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Admin.UserProducts"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Admin.AdminNewOrder"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.ConfirmOrder"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.Cart"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.ProductDetails"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.Settings"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.ShoppingApp.NoActionBar" />
        <activity
            android:name=".Admin.AdminCategory"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Admin.AdminHome"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.signupActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".Buyer.loginActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Buyer.MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>