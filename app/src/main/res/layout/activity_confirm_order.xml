<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ConfirmOrder"
    android:background="#e8e8e8">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.cardview.widget.CardView
           xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           xmlns:tools="http://schemas.android.com/tools"
           android:layout_width="match_parent"
           android:layout_height="250dp"
           app:cardCornerRadius="50dp"
           android:elevation="40dp"
           android:layout_marginTop="-50dp"
           app:cardBackgroundColor="@color/purple_200"
           android:id="@+id/cardDesign">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="130dp"
                   android:layout_height="90dp"
                   android:src="@drawable/shipment_icon"
                   android:scaleType="center"
                   android:layout_above="@id/txt"
                   android:layout_centerHorizontal="true"/>


               <TextView
                   android:id="@+id/txt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Please Confirm Your \nShipment Details"
                   android:textSize="25dp"
                   android:textColor="@color/white"
                   android:textAlignment="center"
                   android:layout_alignParentBottom="true"
                   android:layout_marginBottom="30dp"
                   android:textStyle="bold" />
           </RelativeLayout>
       </androidx.cardview.widget.CardView>


       <EditText
           android:id="@+id/shipment_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/cardDesign"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="30dp"
           android:hint="Full Name"
           android:padding="20dp"
           android:textColor="@color/black" />

       <EditText
           android:id="@+id/shipment_phone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/shipment_name"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="10dp"
           android:hint="Phone"
           android:padding="20dp"
           android:textColor="@color/black"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/shipment_phone"
           android:layout_marginTop="10dp"
           android:layout_marginHorizontal="20dp"
           android:padding="20dp"
           android:hint="Address"
           android:id="@+id/shipment_address"
           android:textColor="@color/black"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/shipment_address"
           android:layout_marginTop="10dp"
           android:layout_marginHorizontal="20dp"
           android:padding="20dp"
           android:hint="City/Town"
           android:id="@+id/shipment_city"
           android:textColor="@color/black"
           />

       <EditText
           android:id="@+id/shipment_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/shipment_city"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="10dp"
           android:hint="Email(optional)"
           android:padding="20dp" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/shipment_confirm_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/shipment_email"
           android:layout_centerHorizontal="true"
           android:layout_marginHorizontal="30dp"
           android:layout_marginTop="30dp"
           android:background="@color/pink"
           android:paddingHorizontal="50dp"
           android:paddingVertical="10dp"
           android:text="Place Order"
           android:textColor="@color/white"
           android:textSize="25dp" />

   </RelativeLayout>
</ScrollView>