<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerRegistration">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:scaleType="centerCrop"
        android:id="@+id/sellerImg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Registration Form"
        android:gravity="center"
        android:layout_below="@id/sellerImg"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:layout_margin="30dp"
        android:textColor="#1de9b6"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/sellerImg"
        android:hint="Name..."
        android:inputType="text"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/seller_name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/seller_name"
        android:hint="Phone Number..."
        android:inputType="number"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/seller_phone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/seller_phone"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/seller_email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/seller_email"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/seller_password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/seller_password"
        android:hint="Shop Address..."
        android:inputType="text"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/seller_address"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/seller_address"
        android:text="Register"
        android:background="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:id="@+id/seller_registration_button"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/seller_registration_button"
        android:text="Already Have Account? Login"
        android:background="#1de9b6"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/seller_login_button"/>
</RelativeLayout>

</ScrollView>