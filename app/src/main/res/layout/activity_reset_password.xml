<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/relativeLayout6"
        android:layout_alignParentTop="true"
        android:background="@color/pink">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:id="@+id/total_price"/>



    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_phone_number"
        android:hint="Phone Number"
        android:background="@drawable/input_shape"
        android:padding="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer The Following Questions"
        android:gravity="center"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_below="@id/find_phone_number"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_1"
        android:hint="When was your first date?"
        android:background="@drawable/input_shape"
        android:padding="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_2"
        android:hint="When was your last date?"
        android:background="@drawable/input_shape"
        android:padding="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/question_1"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_answers"
        android:text="Verify Answers"
        android:background="@drawable/button_shape"
        android:padding="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/question_2"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        />




</RelativeLayout>