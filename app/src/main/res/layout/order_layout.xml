<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:elevation="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/productImage"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:elevation="30dp"
                    android:src="@drawable/pending"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noman Tahir"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:id="@+id/order_user_name"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/order_phone_number"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_user_name"
                    android:text="03001234567"
                    android:textSize="20dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/order_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="H#7,St#15 Ramgarh Main Bazar Mughalpura,Lahore"
                    android:textSize="18dp"
                    android:layout_marginStart="25dp"
                    android:layout_below="@id/order_phone_number"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/order_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_address"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:text="01/06/2022   12/04/33 PM"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300.00"
                    android:textSize="30dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"
                    android:layout_below="@id/order_date_time"
                    android:layout_marginTop="20dp"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/order_details_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_price"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/pink"
                    android:padding="10dp"
                    android:text="Show Order Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"

                    />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>